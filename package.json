    "format": "prettier --write \"**/*.{ts,tsx,md,html}\"",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.3",
    "only-allow": "^1.2.1",
    "prettier": "^3.2.4",
    "turbo": "latest"
  },
  "pnpm": {
    "overrides": {
      "vite@>=5.0.0 <=5.0.11": ">=5.0.12"
    }
  }
}
